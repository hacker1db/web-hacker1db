# NPM Registry Configuration
registry=https://registry.npmjs.org/

# Timeout settings for reliability
fetch-timeout=600000
fetch-retry-mintimeout=10000  
fetch-retry-maxtimeout=60000
fetch-retries=5

# Network reliability
maxsockets=15

# Cache settings for CI
prefer-online=true

# Optimize for CI/CD builds
progress=false
audit=false
fund=false
color=false

# Engine and dependency resolution
engine-strict=false